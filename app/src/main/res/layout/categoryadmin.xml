<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vienduoi"
    android:layout_margin="8dp"
    >

    <ImageView
        android:id="@+id/imagecategory"
        android:layout_width="106dp"
        android:layout_height="98dp"
        android:layout_margin="8dp"
        android:background="@drawable/bordervien"
        android:src="@drawable/chatadmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namecategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="namecategory"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagecategory"
        app:layout_constraintStart_toStartOf="@+id/imagecategory"
        app:layout_constraintTop_toBottomOf="@+id/imagecategory" />

    <Button
        android:id="@+id/sua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Sửa"
        app:layout_constraintBottom_toBottomOf="@+id/imagecategory"
        app:layout_constraintStart_toEndOf="@+id/imagecategory"
        app:layout_constraintTop_toTopOf="@+id/imagecategory" />

    <Button
        android:id="@+id/xoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Xóa"
        app:layout_constraintBottom_toBottomOf="@+id/sua"
        app:layout_constraintStart_toEndOf="@+id/sua"
        app:layout_constraintTop_toTopOf="@+id/sua" />
</androidx.constraintlayout.widget.ConstraintLayout>