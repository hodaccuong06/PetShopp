<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/vienduoi">

    <ImageView
        android:id="@+id/imageproduct"
        android:layout_width="106dp"
        android:layout_height="98dp"
        android:layout_margin="8dp"
        android:background="@drawable/bordervien"
        android:src="@drawable/chatadmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameproduct"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="namecategory"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageproduct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageproduct"
        app:layout_constraintTop_toBottomOf="@+id/imageproduct"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/suaproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Sửa"
        app:layout_constraintBottom_toBottomOf="@+id/imageproduct"
        app:layout_constraintStart_toEndOf="@+id/imageproduct"
        app:layout_constraintTop_toTopOf="@+id/imageproduct" />

    <Button
        android:id="@+id/xoaproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Xóa"
        app:layout_constraintBottom_toBottomOf="@+id/suaproduct"
        app:layout_constraintStart_toEndOf="@+id/suaproduct"
        app:layout_constraintTop_toTopOf="@+id/suaproduct" />

    <TextView
        android:id="@+id/priceproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/nameproduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameproduct"
        app:layout_constraintTop_toTopOf="@+id/nameproduct" />
</androidx.constraintlayout.widget.ConstraintLayout>