<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.AllDonHangActivity">

  <ImageView
      android:id="@+id/backdonhangall"
      android:layout_width="71dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:padding="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Đơn hàng"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/backdonhangall"
      app:layout_constraintStart_toEndOf="@+id/backdonhangall"
      app:layout_constraintTop_toTopOf="@+id/backdonhangall" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_donhangall"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="32dp"
      android:background="#BBBBBB"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />
</androidx.constraintlayout.widget.ConstraintLayout>